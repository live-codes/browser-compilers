{
  "name": "@live-codes/browser-compilers",
  "version": "0.5.3",
  "description": "Compilers that run in the browser, for use in livecodes.io",
  "author": "Hatem Hosny",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "url": "https://github.com/live-codes/browser-compilers"
  },
  "scripts": {
    "start": "live-server dist --port=8081 --no-browser --cors",
    "build": "run-s clean build:vendors copy:types",
    "build:vendors": "node ./scripts/vendors.js && node ./scripts/vendors-module.mjs",
    "copy:types": "recursive-copy vendor_modules/types dist/types",
    "gh-pages": "gh-pages -m \"[ci skip] Updates\" -d dist",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier src --ignore-path .eslintignore --write",
    "fix:eslint": "eslint --fix --ext js,jsx,ts,tsx .",
    "lint:prettier": "prettier src --ignore-path .eslintignore --list-different",
    "lint:eslint": "eslint --ext js,jsx,ts,tsx . ",
    "release": "standard-version",
    "prepare-release": "run-s reset build test cov release",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "recursive-delete dist",
    "prepush": "run-s fix build"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "0.1.4",
    "@mdx-js/mdx": "2.0.0",
    "@prettier/plugin-pug": "1.19.2",
    "@webassemblyjs/wast-refmt": "1.11.1",
    "babel-preset-solid": "1.3.5",
    "esbuild-plugin-cache": "0.2.9",
    "esbuild-plugin-velcro": "0.1.1",
    "eslint": "8.11.0",
    "less": "4.1.2",
    "postcss": "8.4.6",
    "postcss-preset-env": "7.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native-web": "0.17.5",
    "remark-gfm": "3.0.1",
    "sass": "1.49.7",
    "svelte": "3.44.1",
    "windicss": "3.2.1"
  },
  "devDependencies": {
    "@types/live-server": "1.2.0",
    "@types/node": "14.0.4",
    "@types/prettier": "2.1.6",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "10.4.2",
    "cz-conventional-changelog": "3.2.0",
    "esbuild": "0.11.12",
    "esbuild-plugin-node-polyfills": "1.0.2",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.3",
    "eslint-plugin-jsdoc": "38.0.6",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "gh-pages": "2.2.0",
    "live-server": "1.2.1",
    "mkdirp": "1.0.4",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "postcss-cli": "8.3.1",
    "prettier": "2.2.1",
    "recursive-fs": "2.1.0",
    "standard-version": "9.3.0",
    "typescript": "4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  }
}
